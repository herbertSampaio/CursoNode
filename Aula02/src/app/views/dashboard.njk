{%extends "_layouts/main.njk"%} {%block body%}
<div class="content">
  <strong>Bem vindo {{user.name}}</strong>
  <p>Selecione um profissional</p>
  <ul class="providers">
    {%for provider in providers%}
      <li class="provider">
        <div>
          <img src="/files/{{provider.avatar}}"/>
          <strong>{{provider.name}}</strong>
        </div>
        <a href="/app/appointments/new/{{provider.id}}">+</a>
      </li>
    {%endfor%}
  </ul>
  <a href="/app/logout" class="logout">Logout</a>
</div>
{%endblock%}
